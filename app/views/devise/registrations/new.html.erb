<div class="grid grid-cols-2 h-screen">

  <div class="container mx-auto w-1/2 my-auto">
    <%= link_to root_path do %>
      <%= image_tag "Logo.png", class:"" %>
    <% end %>
  </div>

  <div class="container mx-auto w-1/2 my-auto box__authentication">
    <div class="container mx-auto w-1/2 my-auto box__authentication__position__form">

      <div class="box__title">
        <p>Cadastre-se</p>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name,
                      label: false,
                      placeholder: "Digite seu nome",
                      require: true,
                      autofocus: true,
                      input_html: { autocomplete: "name", class: "form__default" } %>
          <%= f.input :email,
                      label: false,
                      placeholder: "Digite seu email",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form__default mt-3" }%>
          <%= f.input :password,
                      required: true,
                      label: false,
                      placeholder: "Digite sua senha",
                      # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: "form__default mt-3" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      label: false,
                      placeholder: "Confirme sua senha",
                      input_html: { autocomplete: "new-password", class: "form__default mt-3" } %>
        </div>

        <div class="form-actions box__authentication__actions mt-5">
          <%= f.button :submit, "Cadastrar", class: "btn__enter" %>
          <%= link_to "Entrar", new_session_path(resource_name), class: "mt-3" %>
          <%#= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>

</div>
