
<div class="grid grid-cols-2 h-screen">

  <div class="container mx-auto w-1/2 my-auto">
    <%= link_to root_path do %>
      <%= image_tag "Logo.png", class:"" %>
    <% end %>
  </div>

  <div class="container mx-auto w-1/2 my-auto box__authentication">

    <div class="container mx-auto w-1/2 my-auto box__authentication__position__form">
      <div class="box__title">
        <p>Entre</p>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs ">
          <%= f.input :email,
                      label: false,
                      placeholder: "Digite seu email",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form__default" } %>
          <%= f.input :password,
                      label: false,
                      placeholder: "Digite sua senha",
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form__default mt-3" } %>
          <% if devise_mapping.rememberable? %>
            <div class="flex ">
              <%= f.input :remember_me,
                          as: :boolean,
                          input_html: {class: "mt-3 ms-2"},
                          label: false %>
              <label class="ms-2 mt-2" for="user_remember_me">Lembre-me</label>
            </div>
          <% end %>

        </div>

        <div class="form-actions box__authentication__actions mt-5 ">
          <%= f.button :submit, "Entrar", class: "btn__enter" %>
          <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "btn__recovery" %>
          <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "mt-3" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
